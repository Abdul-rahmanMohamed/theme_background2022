         </xpath>
         <xpath expr="//div[hasclass('pos-topheader')]" position="attributes">
             <attribute name="style">background:#326c51;</attribute>
         </xpath>
    </t>
    <t t-name="ProductList__changes_here" t-inherit="point_of_sale.ProductList" t-inherit-mode="extension">
